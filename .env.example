# Terry Ecom Link Checker - Environment Variables
# Copy this file to .env and update the values

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development

# Crawl Configuration
MAX_PAGES=300
HARD_LIMIT_PAGES=500
CRAWL_TIMEOUT=120
CRAWL_DELAY=0.5

# Email Configuration (Optional - for feedback functionality)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FEEDBACK_EMAIL=terry@terryecom.com

# Rate Limiting (Optional - uses defaults if not set)
# RATE_LIMIT_CRAWL=1 per minute
# RATE_LIMIT_FEEDBACK=3 per hour
# RATE_LIMIT_GENERAL=200 per day

# Production Settings
PORT=5000